.comet-list-group__row-label {
	margin: $comet-space-inline-right-s;
}

.comet-list-group__row.comet-list-group__row--selected:before {
	left: auto;
	right: 0;
}

.comet-list-group__actions {
	margin: $comet-space-s 0 $comet-space-s $comet-space-s;
}

.comet-list-group__row-type-icon {
	margin: $comet-space-inline-right-s;
}

.comet-list-group__row-badge {
	margin: $comet-space-inline-left-s;
}

.comet-list-group__avatar {
	margin: $comet-space-inline-right-s;
}

.comet-list-group__row-status--red,
.comet-list-group__row-status--yellow {
	margin: $comet-space-inline-right-s;
}

.comet-list-group__avatar + .comet-list-group__row-status {
	left: auto;
	right: 38px;
}

.comet-list-group__row-type-icon + .comet-list-group__row-status {
	left: auto;
	right: 27px;
}


.comet-form__radio-button-visual,
.comet-form__checkbox-visual {
	margin-left: 6px;
	margin-right: 0;
}

.comet-form__field-group {
	.comet-form__label-required-indicator {
	    margin-left: 0;
	    margin-right: $comet-space-xs;
	}
}

.comet-form__select {
	
	.comet-form__select-input {
		padding-left: 40px;
		padding-right: $comet-space-s;
	}
	
	.comet-form__select-open-indicator {
		border-radius: $comet-border-radius 0 0 $comet-border-radius;
		left: -1px;
		right: auto;
	}
}

.comet-form__field-error-icon {
	margin: $comet-space-inline-right-s;
}

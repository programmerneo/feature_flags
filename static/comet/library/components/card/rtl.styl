
.comet-card {
	text-align: right;
	
	.comet-card__duration {
		left: auto;
		right: $comet-space-s;
		
		@media screen and (min-width: $comet-breakpoints-tablet-portrait) {
			right: $comet-space-m;
		}
	}
	
	.actions-region-search {
	    left: 0;
	    right: auto;
	}
	
	.comet-list-group__row-anchor {
		
		.comet-list-group__row-type-icon,
		.comet-list-group__row-label {
			margin: $comet-space-inline-right-s;
		}
	}
}
